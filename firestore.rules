rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow signed-in users to read and write their own data,
    // and to create new shipments and recipients.
    
    // Allow creation of new shipments by any authenticated user
    match /shipments/{shipmentId} {
      allow read, write: if request.auth != null;
    }

    // Allow creation of new recipients by any authenticated user
    match /recipients/{recipientId} {
      allow read, write: if request.auth != null;
    }

    // A catch-all rule for any other documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
